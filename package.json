{
    "name": "asymptote",
    "displayName": "Asymptote",
    "description": "Support for Asymptote, a vector graphics language.",
    "version": "1.2.0",
    "publisher": "supakornras",
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/supakorn-ras/vscode-lang-asymptote"
    },
    "license": "SEE LICENSE IN LICENSE.md",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "asymptote",
                "aliases": [
                    "Asymptote",
                    "asymptote"
                ],
                "extensions": [
                    ".asy"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "breakpoints": [
            {
                "language": "asymptote"
            }
        ],
        "debuggers": [
            {
                "type": "asy",
                "label": "Asymptote",
                
                "program": "./asydbg/__main__.py", 

                "windows": {
                    "runtime": "python"
                }, 

                "runtime": "python3",

                "configurationAttributes": {
                    "launch": {
                        "required": ["program"], 
                        "properties": {
                            "program": {
                                "type": "string", 
                                "description": "Path to Asymptote File", 
                                "default": "${file}"
                            }
                        }
                    } 
                },

                "initialConfigurations": [
                    {
                        "type": "asy",
                        "request": "launch", 
                        "name": "Asymptote File", 
                        "program": "${file}" 
                    }
                ], 

                "configurationSnippets": [
                    {
                        "label": "Asymptote: Launch", 
                        "description": "A configuration for lanching asympote file. ", 
                        "body": {
                            "program": "Asy file"
                        }
                    }
                ]
            }
        ],
        "grammars": [
            {
                "language": "asymptote",
                "scopeName": "source.asymptote",
                "path": "./syntaxes/asymptote.tmLanguage.json"
            }
        ]
    }
}
